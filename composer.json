{
  "name": "open-orchestra/open-orchestra-mongo-libs",
  "description": "Some library to use the Open Orchestra project with mongo",
  "license": "Apache-2.0",
  "authors": [
    {
      "name": "OpenOrchestra community",
      "homepage": "https://github.com/open-orchestra/open-orchestra-libs/graphs/contributors"
    }
  ],
  "minimum-stability": "dev",
  "require": {
    "open-orchestra/open-orchestra-libs": "*",
    "doctrine/mongodb": "1.2.1",
    "doctrine/mongodb-odm": "1.0.3",
    "doctrine/mongodb-odm-bundle" : "3.0.1",
    "solution/mongo-odm-aggregation-bundle": "*",
    "symfony/http-foundation": "*",
    "jms/metadata": "~1.1"
  },
  "require-dev": {
    "psr/log": "1.0.0",
    "codeclimate/php-test-reporter": "dev-master",
    "phpunit/phpunit" : "4.7.2",
    "phake/phake": "2.1.0"
  },
  "config" : {
    "bin-dir" : "bin"
  },
  "autoload": {
    "psr-4": {
      "OpenOrchestra\\Pagination\\": "Pagination/",
      "OpenOrchestra\\MongoTrait\\": "MongoTrait/",
      "OpenOrchestra\\Repository\\": "Repository/",
      "OpenOrchestra\\MongoBundle\\": "MongoBundle/",
      "OpenOrchestra\\Transformer\\": "Transformer/"
    }
  }
}
